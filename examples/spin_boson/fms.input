# FMS input
# interface
interface              = boson_model_diabatic

# initialization
init_state             = 0
init_sampling          = wigner_distrib
sampling_compression   = 0.6
n_init_traj            = 50
virtual_basis          = True
seed                   = 0
n_states               = 2
init_mode_min_olap     = 0.1

# propagation
simulation_time        = 30.
default_time_step      = 0.02
coupled_time_step      = 0.02
phase_prop             = False

# integration
integrals              = boson_model
renorm                 = False
propagator             = velocity_verlet
energy_jump_toler      = 0.001
pop_jump_toler         = 0.0001
sij_thresh             = 0.5

# spawning
spawning               = continuous
spawn_pop_thresh       = 0.025
spawn_olap_thresh      = 0.8
continuous_min_overlap = 0.1

# printing
print_traj             = True
print_es               = True
print_matrices         = True
print_chkpt            = True
print_level            = 5
